@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

<form id="account" method="post" class="login100-form validate-form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="wrap-input100 validate-input m-b-26">
        <label asp-for="Input.Email" class="label-input100"></label>
        <input class="input100" asp-for="Input.Email" placeholder="Enter username">
    </div>
    <div class="wrap-input100 validate-input m-b-26">
        <label asp-for="Input.Password" class="label-input100"></label>
        <input class="input100" asp-for="Input.Password" placeholder="Enter Password">
    </div>
    <div class="flex-sb-m w-full p-b-5">
        <div class="contact100-form-checkbox">
            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                <input asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
        </div>
    </div>

    <div>
        <a id="forgot-password" asp-page="./ForgotPassword" class="txt1">
            Forgot Password?
        </a><br/>
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="txt1">
            Register as a new user
        </a><br />
        <a asp-page="./CustomerIndex" asp-route-returnUrl="@Model.ReturnUrl" class="txt1">
            Back to Home
        </a><br />
    </div>


    <div class="container-login100-form-btn p-t-5">
        <button class="login100-form-btn" type="submit">
            Login
        </button>
    </div>
</form>





@section Scripts {
<partial name="_ValidationScriptsPartial" />
}






