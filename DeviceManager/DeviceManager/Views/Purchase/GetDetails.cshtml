@model List<DeviceManager.Models.Cart.CartObject>
@{
    ViewData["Title"] = "GetDetails";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="section padding_layout_1 Shopping_cart_section">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <div class="product-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Discount Price</th>
                                <th>Quantity</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="col-sm-8 col-md-6">
                                        <div class="media">
                                            <a class="thumbnail pull-left" href="#"> <img class="media-object" src="~/image/@item.Image" alt="#"></a>
                                            <div class="media-body">
                                                <h4 class="media-heading"><a href="#">@item.ProductName</a></h4>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="col-sm-1 col-md-1 text-center"><p class="price_table">@item.Price</p></td>
                                    <td class="col-sm-1 col-md-1 text-center"><p class="price_table">@item.DiscountPrice</p></td>
                                    <td class="col-sm-1 col-md-1 text-center"><p class="price_table">@item.Quantity</p></td>
                                    <td class="col-sm-1 col-md-1"><a asp-controller="Items" asp-action="DetailUser" class="bt_main" asp-route-productName="@item.ProductName"><i class="fas fa-info"></i> </a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

