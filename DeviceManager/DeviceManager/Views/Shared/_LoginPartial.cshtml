@using Microsoft.AspNetCore.Identity
@inject SignInManager<DeviceManager.Data.Entities.User> SignInManager
@inject UserManager<DeviceManager.Data.Entities.User> UserManager


@if (SignInManager.IsSignedIn(User))
{
     <div class="logout">
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </div>
     <div class="logout">
         <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
             <button class="button-logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
         </form>
     </div>
}
else
{
    <div class="logout">
        <a asp-area="Identity" asp-page="/Account/Register">Register</a>
    </div>
    <div class="logout">
        <a asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
}

